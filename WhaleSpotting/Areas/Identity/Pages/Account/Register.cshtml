@{
    ViewData["Title"] = "Register";
}

<h1 class="text-title">@ViewData["Title"]</h1>

<div class="row">
    <div class="card-component">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @*<h4 class="text-subtitle">Create a new account.</h4>*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="register-label-email" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="register-label-password" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="register-label-confirm-password" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary register-button">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
